@model RentACar.Models.About
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h2>About Yenile</h2>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post" action="@Url.Action("Update","About", new {Id = Model.Id })" enctype="multipart/form-data" role="form">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Basliq</label>
                    <input type="text" value="@Model.Basliq" name="Basliq" class="form-control" id="exampleInputEmail1" placeholder="Ad Basliq Edin">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Metn</label>
                    <input type="text" name="Metn" value="@Model.Metn" class="form-control" id="exampleInputEmail1" placeholder="Ad Metn Edin">
                </div>



              

            

            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Yenile</button>
            </div>
        </form>
    </div>
    <!-- /.card -->
    <!-- Form Element sizes -->



</div>