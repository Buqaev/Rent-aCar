@model List<RentACar.Models.CarClass>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int a = 1;
}



<br />
<a href="@Url.Action("Create","CarClass")" class="btn btn-primary">MasinSinifi Yarat</a>

<h2>Masin Sinifleri</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>#</td>
            <td>Ad</td>
            <td>Duyme</td>
           
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            <td>@a</td>
            <td>@x.Ad</td>
           
            <td>
                <a href="@Url.Action("UpdateClass","CarClass",new {Id=x.Id })" class="btn btn-info">Yenile</a>

                <a href="@Url.Action("Delate","CarClass" ,new { Id=x.Id})" class="btn btn-danger">Sil</a>
            </td>

            @{ a++;}

        </tr>
    }
</table>

