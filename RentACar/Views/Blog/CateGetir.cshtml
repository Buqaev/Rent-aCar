@model List<RentACar.Models.BlogCategory>
@{
    ViewBag.Title = "CateGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CateGetir</h2>

<form method="post" action="@Url.Action("Create","Blog")" enctype="multipart/form-data" role="form">
    <div class="card-body">
        <div class="form-group">
            <label for="exampleInputEmail1">Basliq</label>
            <input type="text" name="Baslig" class="form-control" id="exampleInputEmail1" placeholder="Ad Basliq Edin">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Metn</label>
            <input type="text" name="Metn" class="form-control" id="exampleInputEmail1" placeholder="Ad Metn Edin">
        </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Kateqoriya</label>
            <select name="BlogCategorysId" class="form-control">
                <option>--Secin</option>
                @foreach (var x in Model)
                {
                    <option value="@x.Id">@x.Ad</option>
                }

            </select>
        </div>


        <div class="form-group">
            <label for="exampleInputEmail1">Teq</label>
            <select multiple name="Tags" class="form-control">
                <option>--Secin</option>
                @foreach (var x in ViewBag.Tags)

                {
                    <option value="@x.Id">@x.Ad</option>
                }

            </select>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Sekil</label>
            <input type="file" name="Sekil" class="form-control" id="exampleInputEmail1">
        </div>

    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Yarat</button>
    </div>
</form>